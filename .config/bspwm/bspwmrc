#! /bin/sh

export PATH=$HOME/.local/bin:$PATH
xset +fp ~/.fonts/siji
xset +fp ~/.fonts/tewi
xset +fp ~/.fonts/ohsnap
xset +fp ~/.fonts/fontawesome
xset +fp ~/.fonts/terminesspowerline
xsetroot -cursor_name left_ptr
feh --bg-scale Downloads/desert.jpg

sxhkd &
compton &
#nitrogen --restore
bspc monitor -d 1 2 3 4 5 6 7 8 9 0
# runhaskell -XFlexibleContexts -i$HOME/.scripts/lemonbar $HOME/.scripts/lemonbar/bar.hs &
wicd-gtk -t &
polybar example &
blueman-applet 2>&1 > /dev/null &

if [ -x ~/.local/bin/mopidy ]; then
    mopidy 2>&1 > /dev/null &
fi

if [ -x ~/.local/bin/beet ]; then
    beet web 2>&1 > /dev/null &
fi

bspc config border_width         1
bspc config window_gap          8

bspc config split_ratio          0.50
bspc config borderless_monocle   true
bspc config gapless_monocle      true

#bspc rule -a Gimp desktop='^8' state=floating follow=on
#bspc rule -a Chromium desktop='^2'
bspc rule -a Emacs state=tiled
#bspc rule -a Kupfer.py focus=on
#bspc rule -a Screenkey manage=off

bspc desktop 3 -f
