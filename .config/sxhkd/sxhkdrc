#
# wm independent hotkeys
#

# terminal emulator (solarized dark)
super + Return
      bash -c "sed -i 's/solarized-light/solarized-dark/g' .zshrc; urxvt -bc +sb #termite #rxvt -bc +sb"

# terminal emulator (solarized light)
super + {_,shift + }Return
      bash -c "sed -i 's/solarized-dark/solarized-light/g' .zshrc; urxvt -bc +sb #termite #rxvt -bc +sb"

super + ctrl + space
      mpc toggle

# program launcher
super + space
	dmenu_run -b

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit bspwm normally
super + alt + Escape
	bspc quit

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {h,j,k,l}
	bspc node -f {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# swap windows
super + shift + {h,j,k,l}
      	bspc node -s {west,south,north,east}

# Make things happen
#

XF86AudioLowerVolume
#	mpc volume -10
	pactl set-sink-volume jack_out -10%
XF86AudioRaiseVolume
#	mpc volume +10
	pactl set-sink-volume jack_out +10%

XF86AudioMute
#	bash -c "if [ `mpc volume |  tr -d '[:alpha:][:punct:]'` != "0" ]; then echo `mpc volume| tr -d '[:alpha:][:punct:]'` > /tmp/mpc_vol; mpc volume 0; else mpc volume `cat /tmp/mpc_vol`; fi"
	pactl set-sink-mute jack_out toggle

XF86AudioPrev
	mpc prev

XF86AudioNext
	mpc next

XF86MonBrightnessDown
	.scripts/brightness.sh down
#	xbacklight -5

XF86MonBrightnessUp
	.scripts/brightness.sh up
#	xbacklight +5

#
# MPC controls
#
super + ctrl + {Left, Right}
      mpc {prev, next}

super + ctrl + p
      urxvt -e '/usr/bin/ncmpcpp'

# MAke IMage
super + ctrl + s
      maim

# Erlang doc open
super + e; super + d
      firefox /usr/share/doc/erlang-doc/doc/index.html

